<!-- Datos del usuario -->
<section class="info-usuario container products-wrapper">
    <div class="row">
        <div class="img-container offset-3 col-2">
            <img src=<%=user.foto_de_perfil %> alt="foto de perfil" class="foto-perfil">
        </div>
        <div class="data-container col-6">
            <div class="d-flex align-items-center ">
                <h1 class="main-title"> <%= user.nombre %>
                    <a href="/users/profile-edit">
                        <i class="fas fa-cog">Editar Perfil</i>
                    </a>
                </h1>
                <a class="btn mt-3 ml-4" href="">SEGUIR</a>
            </div>
            <form action="/users/deleteprofile/<% =user.id %>" method="POST">
                <input type="submit" value="Borrar Cuenta">
            </form>
            <div>
                <ul class="">
                    <li> <%= usuarioinfo.productosconusuarios.length %></li>
                    <li>200 seguidores</li>
                    <li>300 comentarios</li>
                </ul>
            </div>
        </div>
    </div>
</section>
