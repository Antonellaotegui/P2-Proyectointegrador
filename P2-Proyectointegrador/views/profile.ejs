<%-include("./partials/head.ejs") %>
<% if (isLogged){ %>
  <%-include("./partials/headerLogueado.ejs") %>
<% } else {  %>
  <%-include("./partials/header.ejs") %>
<% } %>

<!-- Datos del usuario -->
<section class="info-usuario container products-wrapper">
    <div class="row">
        <div class="img-container offset-3 col-2">
            <img src="<%=usuario.foto_de_perfil %>" alt="foto de perfil" class="foto-perfil">
        </div>
        <div class="data-container col-6">
            <div class="d-flex align-items-center ">
                <h1 class="main-title"> <%= usuario.nombre %>
                    <a href="/users/profile-edit">
                        <i class="fas fa-cog">Editar Perfil</i>
                    </a>
                </h1>
                
            </div>
       
            </form>
            <div>
                <ul class="">
                    <li> Productos: <%= usuario.userconproductos.length %></li>
                    <li>200 seguidores</li>
                    <li>Comentarios: <%= usuario.userconcomentarios.length %></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- /Datos del usuario -->

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Mis productos</h2>
        </div> 
        <!-- Show mis productos -->
         <% for(let i = 0; i<usuario.userconproductos.length ; i++){ %> 
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/products/detalle/<%=usuario.userconproductos[i].id%>">
                        <figure class="product-box_image">
                            <img src="<%=usuario.userconproductos[i].imagen%>" alt="imagen <%=usuario.userconproductos[i].nombre%>">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= usuario.userconproductos[i].nombre %></h2>
                            <p><%= usuario.userconproductos[i].descripcion%></p>
                        </article>
                    </a>
                </section>
            </div>
        <% } %>
    </div>
</div>

<%-include("./partials/footer.ejs") %>